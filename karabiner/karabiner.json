{
  "title": "Home row modifiers",
  "rules": [
    {
      "description": "Caps Lock -> Escape",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "escape" } ]
        }
      ]
    },
    {
      "description": "Home row mod keys",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "a", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "left_command" } ],
          "to_if_alone": [ { "key_code": "a" } ],
          "to_if_held_down": [ { "key_code": "left_command" } ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200,
            "basic.to_if_held_down_threshold_milliseconds": 200
          }
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "right_command" } ],
          "to_if_alone": [ { "key_code": "semicolon" } ],
          "to_if_held_down": [ { "key_code": "right_command" } ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200,
            "basic.to_if_held_down_threshold_milliseconds": 200
